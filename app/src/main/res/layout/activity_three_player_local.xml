<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:background="@drawable/board_4x4"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <ImageView
            android:id="@+id/counter_topLeft_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:onClick="drop_in"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/counter_topLeft_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="10dp"
            android:onClick="drop_in"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/counter_topRight_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="9dp"
            android:onClick="drop_in"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/counter_topRight_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="8dp"
            android:onClick="drop_in"
            android:tag="3"
            app:layout_column="3"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/counter_midLeft_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginTop="10dp"
            android:onClick="drop_in"
            android:tag="4"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/counter_midLeft_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="drop_in"
            android:tag="5"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/counter_midRight_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp"
            android:onClick="drop_in"
            android:tag="6"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/counter_midRight_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:onClick="drop_in"
            android:tag="7"
            app:layout_column="3"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/counter_lowLeft_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginTop="9dp"
            android:onClick="drop_in"
            android:tag="8"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/counter_lowLeft_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:onClick="drop_in"
            android:tag="9"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/counter_lowRight_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:onClick="drop_in"
            android:tag="10"
            app:layout_column="2"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/counter_lowRight_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"

            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:onClick="drop_in"
            android:tag="11"
            app:layout_column="3"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/counter_bottomLeft_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginTop="9dp"
            android:onClick="drop_in"
            android:tag="12"
            app:layout_column="0"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/counter_bottomLeft_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:onClick="drop_in"
            android:tag="13"
            app:layout_column="1"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/counter_bottomRight_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:onClick="drop_in"
            android:tag="14"
            app:layout_column="2"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/counter_bottomRight_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="9dp"
            android:onClick="drop_in"
            android:tag="15"
            app:layout_column="3"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/devInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Dev by 090, Graphics by Suraj"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>